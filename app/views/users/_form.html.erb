<div class="container">
    <div class="mx-auto">
        <div class="row justify-content-center mt-3">
            <div class="col-10">
                <%= render 'shared/errors',obj:@user%>
                <%= form_with model: @user,class:"container shadow p-3 mb-3 bg-black rounded",local: true do |f| %>
                    <div class="form-group row mt-3">
                        <%= f.label :username ,class:"col-2 col-form-label text-white"%>
                        <div class="col-10 ">
                            <%= f.text_field :username,class:"form-control shadow p-2 bg-body-tertiary rounded",placeholder:"Enter Your Username" %>
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <%=f.label :email,class:"col-2 col-form-label text-white" %>
                        <div class="col-10 ">
                            <%=f.email_field :email,class:"form-control shadow  p-2 rounded",placeholder:"Enter Your Email"%>
                        </div>
                    </div>
                      <div class="form-group row mt-4">
                        <%=f.label :password,class:"col-2  col-form-label text-white" %>
                        <div class="col-10 ">
                            <%=f.password_field :password,class:"form-control shadow p-2  rounded" ,placeholder:"Enter Your Password"%>
                        </div>
                    </div>
                    <div class="form-group  text-center mt-5">
                        <%= f.submit (@user.new_record?  ? "Sign Up": "Update Profile") , class: "btn btn-outline-dark btn-lg my-6 text-white" %>
                    </div> 
                <% end %>
            </div>
            <div class="mb-3">
                <%= link_to '[Cancel and Return Back To Home]' ,root_path,class:"row justify-content-center mt-4 text-black" %>
            </div>
        </div>
    </div>
</div>