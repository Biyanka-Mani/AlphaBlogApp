<h1 class="text-center mt-30">Log In </h1>
<div class="container">
    <div class="mx-auto">
        <div class="row justify-content-center mt-3">
            <div class="col-10">
                <% if  logged_in? %>
                    <h2 class="text-center mt-5">You are Logged In !</h2>
                <% else %>
                    <%= form_with scope: :session, url: login_path,class:"container shadow p-3 mb-3 bg-black rounded",local: true do |f| %>
                        <div class="form-group row mt-4">
                            <%=f.label :email,class:"col-2 col-form-label text-white" %>
                            <div class="col-10 ">
                                <%=f.email_field :email,class:"form-control shadow  p-2 rounded",placeholder:"Enter Your Email"%>
                            </div>
                        </div>
                        <div class="form-group row mt-4">
                            <%=f.label :password,class:"col-2  col-form-label text-white" %>
                            <div class="col-10 ">
                                <%=f.password_field :password,class:"form-control shadow p-2  rounded" ,placeholder:"Enter Your Password"%>
                            </div>
                        </div>
                        <div class="form-group  text-center mt-5">
                            <%= f.submit "Log In", class: "btn btn-outline-dark btn-lg my-6 text-white" %>
                        </div> 
                    <% end %>
                <%end%>

            </div>
        </div>
    </div>
</div>