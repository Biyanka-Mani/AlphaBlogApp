<h1>Editing Page Of Article</h1>
<

<% if @article.errors.any? %>
    <h2>The following errors makes the Articles from being saved </h2>
    <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li>  <%= message %> </li>
        <% end %>
    </ul>

<% end %>


<%= form_with (model: @article, local: true) do |f| %>

    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>

    </p>
    <p>
        <%=f.label :Description %><br/>
        <%=f.text_area :Description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    
<% end %>